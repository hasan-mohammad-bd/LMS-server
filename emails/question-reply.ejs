        }

        .button {
            display: inline-block;
            padding: 15px 30px;
            background: #fff;
            color: #3498db;
            text-decoration: none;
            border-radius: 25px;
            font-weight: bold;
            transition: background 0.3s, color 0.3s;
        }

        .button:hover {
            background: #3498db;
            color: #fff;
        }

        .icon {
            font-size: 60px;
            color: #fff;
            margin-bottom: 20px;
        }

        .section {
            border-top: 2px solid #fff;
            margin-top: 20px;
            padding-top: 20px;
        }

        .footer {
            margin-top: 30px;
            color: #ccc;
        }
